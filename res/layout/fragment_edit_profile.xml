<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:fadeScrollbars="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarSize="@dimen/scrollbar_size"
    android:scrollbarStyle="outsideOverlay" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow>

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="@dimen/image_thumbnail_size"
                android:layout_height="@dimen/image_thumbnail_size"
                android:contentDescription="@string/edit_profile_alt_profile_image"
                android:src="@drawable/ic_profile_image" />

            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:onClick="onChooseImage"
                android:text="@string/edit_profile_btn_add_image" />
        </TableRow>

        <TableRow>

            <com.devsmart.android.ui.HorizontalListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:background="@color/gray" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/edit_profile_label_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/edit_profile_label_nickname_text" />

            <EditText
                android:id="@+id/edit_profile_field_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/edit_profile_field_nickname_hint" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/edit_profile_label_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/edit_profile_label_age_text" />

            <Spinner
                android:id="@+id/edit_profile_spinner_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:entries="@array/age_array"
                android:prompt="@string/edit_profile_spinner_age_prompt" >
            </Spinner>
        </TableRow>

        <TableRow android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/edit_profile_label_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/edit_profile_label_gender_text" />

            <Spinner
                android:id="@+id/edit_profile_spinner_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:entries="@array/gender_array"
                android:prompt="@string/edit_profile_spinner_gender_prompt" >
            </Spinner>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/edit_profile_label_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/edit_profile_label_country_text" />

            <Spinner
                android:id="@+id/edit_profile_spinner_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:entries="@array/country_array"
                android:prompt="@string/edit_profile_spinner_country_prompt" >
            </Spinner>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/label_nickname5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/edit_profile_label_nickname_text" />

            <Spinner
                android:id="@+id/spinner_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:entries="@array/language_array"
                android:prompt="@string/edit_profile_spinner_age_prompt" >
            </Spinner>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/text_name"
                android:textColor="#372c24"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="20sp" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/label_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/text_surname"
                android:textColor="#372c24"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reg_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/label_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/text_interest"
                android:textColor="#372c24"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reg_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_span="2"
                android:onClick="onRegister"
                android:text="@string/edit_profile_btn_create_profile"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

</ScrollView>