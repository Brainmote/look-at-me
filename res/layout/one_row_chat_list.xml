<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/profilePhotoImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:contentDescription="@string/text_chat_alt_profile_image"
        android:src="@drawable/ic_profile_image_placeholder" />

    <TextView
        android:id="@+id/nickNameText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|top|bottom"
        android:layout_row="0"
        android:text="@string/text_chat_sender"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lastMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="@string/text_chat_message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lastMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_column="2"
        android:layout_gravity="right|top"
        android:layout_row="0"
        android:text="@string/text_chat_datetime"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</GridLayout>