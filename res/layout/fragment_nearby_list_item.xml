<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <ImageView
        android:id="@+id/profilePhotoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/image_borders"
        android:contentDescription="@string/text_profile_photo_image"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/imageLiked"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@+id/profilePhotoImage"
        android:layout_alignTop="@+id/profilePhotoImage"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/text_profile_liked" />

    <!--
         ProgressBar
