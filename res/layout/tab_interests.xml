<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textInterestHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interest_usage"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <com.brainmote.lookatme.ExpandableHeightGridView
        android:id="@+id/gridInterestInEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/interest_grid_spacing"
        android:isScrollContainer="false"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/interest_grid_spacing" />

</LinearLayout>